<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context="com.sensing.haojian.heartratecounter.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >
        <TextView
            android:id="@+id/hj_labl"
            android:textSize = "25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="heart rate:"
            android:layout_weight="0.3"/>
        <TextView
            android:id="@+id/txt_count"
            android:textSize = "25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="0.3"/>
        <Button
            android:id="@+id/btn_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flash"
            android:layout_weight="0.3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="debug"
            android:id="@+id/txt_debug" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no finger detected"
        android:id="@+id/txt_hint" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RAW DATA"/>

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:id="@+id/rawGraph" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PPG DATA"/>

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:id="@+id/ppgGraph" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Raw Video"/>
    <com.sensing.haojian.heartratecounter.FlashCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/camera_calibration_java_surface_view"
        />

    <!--opencv:show_fps="true"-->
    <!--opencv:camera_id="any"-->

</LinearLayout>
